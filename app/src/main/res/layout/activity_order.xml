<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.OrderActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_logo"
            android:layout_width="439dp"
            android:layout_height="263dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@drawable/logo_kp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <EditText
                android:id="@+id/tv_nama"
                android:layout_width="844dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="250dp"
                android:background="@drawable/editdesign2"
                android:fontFamily="@font/baloo"
                android:hint="Nama"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="#7C7A7A" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_pilih_menu"
            android:layout_width="251dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/buttondesign3"
            android:fontFamily="@font/baloo"
            android:text="Pilih Menu"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>